#beliefs-wrapper
    .section-body
        ul.beliefs-list
            text-align:center;
            li.list-item
                margin-bottom:1.5rem;
                a.belief
                    font-size:1.8rem;
                    text-transform:uppercase;
                    font-weight:bold;
                    color: #605ebb;
                    text-shadow: 0px 2px 2px rgba(0,0,0,.2);
                    &:hover,&:active
                        text-decoration:none;
                        color:#ff4455;
                        cursor:pointer;
